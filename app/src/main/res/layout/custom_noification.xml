<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_20sdp">

        <ImageView
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center"
            android:src="@drawable/icon_laucher"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:text="Ứng Dụng Đã Được Bật"
            android:textSize="@dimen/_10sdp"
            android:layout_marginLeft="10dp"
            android:textColor="#100f0f"
            android:gravity="center|left"
            />
        <ImageButton
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_gravity="center"
            android:id="@+id/img_go_app"
            android:background="@drawable/ic_setting"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp" />
    </LinearLayout>

    <LinearLayout
        android:padding="8dp"
        android:weightSum="6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginLeft="@dimen/_30sdp"
            android:id="@+id/img_red"
            android:background="@drawable/ic_red"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp" />
        <ImageButton
            android:layout_marginLeft="@dimen/_20sdp"
            android:id="@+id/img_green"
            android:background="@drawable/ic_green"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp" />
        <ImageButton
            android:layout_marginLeft="@dimen/_20sdp"
            android:id="@+id/img_blue"
            android:background="@drawable/ic_blue"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>
        <ImageButton
            android:id="@+id/img_pink"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/ic_pink"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp" />
        <ImageButton
            android:layout_marginLeft="@dimen/_20sdp"
            android:id="@+id/img_yellow"
            android:background="@drawable/ic_yellow"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp" />


    </LinearLayout>

    </LinearLayout>