<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center"
            android:src="@drawable/icon_laucher"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp" />

        <TextView
            android:id="@+id/txt_name_notification"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:text="@string/on_off_notification"
            android:textSize="@dimen/_13sdp" />

        <ImageButton
            android:id="@+id/img_go_app"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_8sdp"
            android:background="@drawable/setting" />
    </LinearLayout>

    <LinearLayout
        android:padding="5dp"
        android:weightSum="6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="@dimen/_30sdp"
            android:id="@+id/img_red"
            android:background="@drawable/ic_red"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp" />
        <ImageView
            android:layout_marginLeft="@dimen/_20sdp"
            android:id="@+id/img_green"
            android:background="@drawable/ic_green"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp" />
        <ImageView
            android:layout_marginLeft="@dimen/_20sdp"
            android:id="@+id/img_blue"
            android:background="@drawable/ic_blue"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>
        <ImageView
            android:id="@+id/img_pink"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/ic_pink"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp" />

        <ImageView
            android:id="@+id/img_yellow"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:background="@drawable/ic_yellow" />


    </LinearLayout>

    </LinearLayout>